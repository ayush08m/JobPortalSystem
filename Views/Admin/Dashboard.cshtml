@model JobPortalSystem.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <h2>@Model.TotalUsers</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Employers</h5>
                <h2>@Model.TotalEmployers</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Job Seekers</h5>
                <h2>@Model.TotalSeekers</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body text-dark">
                <h5 class="card-title">Total Jobs</h5>
                <h2>@Model.TotalJobsPosted</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a asp-controller="Admin" asp-action="ManageUsers" class="btn btn-primary">
            <i class="fas fa-users"></i> Manage Users
        </a>
        <a asp-controller="Admin" asp-action="ManageJobs" class="btn btn-success">
            <i class="fas fa-briefcase"></i> Manage Jobs
        </a>
        <a asp-controller="Admin" asp-action="Reports" class="btn btn-info">
            <i class="fas fa-chart-bar"></i> View Reports
        </a>
    </div>
</div>
