@model IEnumerable<JobPortalSystem.Models.Application>
@{
    ViewData["Title"] = "My Applications";
}

<h2><i class="fas fa-file-alt"></i> My Applications</h2>

<div class="row">
    @if (Model != null && Model.Any())
    {
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Job Title</th>
                            <th>Company</th>
                            <th>Category</th>
                            <th>Applied Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model)
                        {
                            <tr>
                                <td>@(app.Job?.Title ?? "N/A")</td>
                                <td>@(app.Job?.Employer?.FirstName ?? "Unknown") @(app.Job?.Employer?.LastName ?? "")</td>
                                <td>
                                    @if (app.Job?.Category != null)
                                    {
                                        <span class="badge bg-info">@app.Job.Category.CategoryName</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">N/A</span>
                                    }
                                </td>
                                <td>@app.AppliedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (app.Status == "Applied")
                                    {
                                        <span class="badge bg-warning text-dark">@app.Status</span>
                                    }
                                    else if (app.Status == "Shortlisted")
                                    {
                                        <span class="badge bg-success">@app.Status</span>
                                    }
                                    else if (app.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">@app.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@app.Status</span>
                                    }
                                </td>
                                <td>
                                    @if (app.JobID > 0)
                                    {
                                        <a asp-controller="Job" asp-action="Details" asp-route-id="@app.JobID" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> View Job
                                        </a>
                                    }
                                    <a asp-controller="Application" asp-action="Details" asp-route-id="@app.ApplicationID" class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> You haven't applied to any jobs yet. 
                <a asp-controller="Job" asp-action="Index" class="alert-link">Browse jobs</a> to get started!
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-controller="Seeker" asp-action="Dashboard" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
    <a asp-controller="Job" asp-action="Index" class="btn btn-primary">
        <i class="fas fa-search"></i> Browse Jobs
    </a>
</div>
