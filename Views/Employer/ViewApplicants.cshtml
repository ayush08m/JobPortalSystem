@model JobPortalSystem.Models.Job
@{
    ViewData["Title"] = "View Applicants";
}

<h2><i class="fas fa-users"></i> Applicants for: @Model.Title</h2>

<div class="card mb-3">
    <div class="card-header bg-primary text-white">
        <h5><i class="fas fa-briefcase"></i> Job Summary</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <p><strong>Category:</strong> @(Model.Category?.CategoryName ?? "N/A")</p>
                <p><strong>Location:</strong> @Model.Location</p>
                <p><strong>Type:</strong> @Model.Type</p>
            </div>
            <div class="col-md-4">
                <p><strong>Posted:</strong> @Model.PostedDate.ToString("MMM dd, yyyy")</p>
                <p><strong>Total Applications:</strong> <span class="badge bg-primary">@(Model.Applications?.Count ?? 0)</span></p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @if (Model.Applications != null && Model.Applications.Any())
    {
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Applicant Name</th>
                            <th>Email</th>
                            <th>Applied Date</th>
                            <th>Resume</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var application in Model.Applications.OrderByDescending(a => a.AppliedDate))
                        {
                            <tr>
                                <td>@(application.User?.FirstName ?? "Unknown") @(application.User?.LastName ?? "")</td>
                                <td>@(application.User?.Email ?? "N/A")</td>
                                <td>@application.AppliedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <a href="@application.ResumePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i> View
                                    </a>
                                </td>
                                <td>
                                    @if (application.Status == "Applied")
                                    {
                                        <span class="badge bg-warning text-dark">@application.Status</span>
                                    }
                                    else if (application.Status == "Shortlisted")
                                    {
                                        <span class="badge bg-success">@application.Status</span>
                                    }
                                    else if (application.Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">@application.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@application.Status</span>
                                    }
                                </td>
                                <td>
                                    <form asp-controller="Employer" asp-action="UpdateApplicationStatus" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="applicationId" value="@application.ApplicationID" />
                                        <div class="btn-group" role="group">
                                            <button type="submit" name="status" value="Shortlisted" class="btn btn-sm btn-success" title="Shortlist">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button type="submit" name="status" value="Rejected" class="btn btn-sm btn-danger" title="Reject">
                                                <i class="fas fa-times"></i>
                                            </button>
                                            <button type="submit" name="status" value="Interviewed" class="btn btn-sm btn-info" title="Interview">
                                                <i class="fas fa-user-tie"></i>
                                            </button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No applications received yet for this job.
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-controller="Employer" asp-action="ManageJobs" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Manage Jobs
    </a>
</div>
