@model IEnumerable<JobPortalSystem.Models.Job>
@{
    ViewData["Title"] = "Manage Jobs";
}

<h2><i class="fas fa-briefcase"></i> Manage Jobs</h2>

<div class="mb-3">
    <a asp-controller="Employer" asp-action="PostJob" class="btn btn-success">
        <i class="fas fa-plus"></i> Post New Job
    </a>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Job Title</th>
                            <th>Category</th>
                            <th>Location</th>
                            <th>Applications</th>
                            <th>Posted Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var job in Model)
                        {
                            <tr>
                                <td><strong>@job.Title</strong></td>
                                <td><span class="badge bg-info">@job.Category!.CategoryName</span></td>
                                <td><i class="fas fa-map-marker-alt"></i> @job.Location</td>
                                <td>
                                    <a asp-controller="Employer" asp-action="ViewApplicants" asp-route-jobId="@job.JobID" class="badge bg-primary">
                                        @(job.Applications?.Count ?? 0) applicants
                                    </a>
                                </td>
                                <td>@job.PostedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (job.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Job" asp-action="Details" asp-route-id="@job.JobID" class="btn btn-sm btn-info" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Employer" asp-action="EditJob" asp-route-id="@job.JobID" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-controller="Employer" asp-action="DeleteJob" asp-route-id="@job.JobID" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this job?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> You haven't posted any jobs yet. 
                <a asp-controller="Employer" asp-action="PostJob" class="alert-link">Post your first job</a>!
            </div>
        </div>
    }
</div>
